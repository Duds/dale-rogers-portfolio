{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/npm",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm run version:sync"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "format": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/**/*",
            "label": "Portfolio Build Assets"
          }
        ],
        "releasedLabels": "released on @{release}"
      }
    ]
  ],
  "preset": "angular",
  "releaseRules": [
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "fix",
      "release": "patch"
    },
    {
      "type": "docs",
      "release": "patch"
    },
    {
      "type": "style",
      "release": "patch"
    },
    {
      "type": "refactor",
      "release": "patch"
    },
    {
      "type": "perf",
      "release": "patch"
    },
    {
      "type": "test",
      "release": "patch"
    },
    {
      "type": "chore",
      "release": "patch"
    },
    {
      "type": "ci",
      "release": "patch"
    },
    {
      "type": "build",
      "release": "patch"
    }
  ],
  "parserOpts": {
    "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
  },
  "writerOpts": {
    "groupBy": "type",
    "commitGroupsSort": "title",
    "commitsSort": "header",
    "noteGroupsSort": "title",
    "notesSort": "text",
    "mainTemplate": "# {{version}} ({{date}})\n\n{{#if @root.linkCompare~}}\n[Compare Changes]({{compareUrl previousTag tag}})\n{{~/if}}\n\n{{#each groups}}\n## {{title}}\n{{#each commits}}\n{{> commit root=@root}}\n{{/each}}\n\n{{/each}}\n{{#if @root.linkReferences~}}\n{{#each references}}\n[{{repository.name}}#{{commit}}]({{href}}) {{commitMessage}}\n{{/each}}\n{{/if}}",
    "commitPartial": "* {{#if scope}}**{{scope}}:** {{/if}}{{subject}}{{#if references}} ({{#each references}}{{#if @root.linkReferences}}[{{repository.name}}#{{commit}}]({{href}}){{else}}{{repository.name}}#{{commit}}{{/if}}{{#unless @last}}, {{/unless}}{{/each}}){{/if}}\n",
    "noteTemplate": "{{#if @root.linkReferences~}}\n{{#each references}}[{{repository.name}}#{{commit}}]({{href}}) {{commitMessage}}{{/each}}\n{{else}}\n{{#each references}}{{repository.name}}#{{commit}} {{commitMessage}}{{/each}}\n{{/if}}\n{{/if}}"
  }
}
