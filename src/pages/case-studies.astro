---
import Layout from "@/layouts/Layout.astro";
import CaseStudyCard from "@/components/features/case-studies/components/CaseStudyCard.astro";
import { getCollection } from "astro:content";

// Case studies (would normally come from a CMS or content collection)
const caseStudies = await getCollection("case-studies");
---

<Layout title="Case Studies">
  <div class="container mx-auto px-4 py-8">
    <h1 class="font-display text-4xl text-text mb-6">Case Studies</h1>
    <p class="text-text-secondary mb-12 max-w-2xl">
      Explore my recent projects and see how I've helped organizations transform
      their services through user-centreed design.
    </p>

    <div class="grid md:grid-cols-2 gap-8">
      {
        caseStudies.map((caseStudy) => (
          <CaseStudyCard
            title={caseStudy.data.title}
            description={caseStudy.data.description}
            client={caseStudy.data.client}
            industry={caseStudy.data.industry}
            duration={caseStudy.data.duration}
            tags={caseStudy.data.tags}
            href={`/case-studies/${caseStudy.slug}`}
          />
        ))
      }
    </div>
  </div>
</Layout>
