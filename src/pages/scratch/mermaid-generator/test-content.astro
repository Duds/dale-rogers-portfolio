---
import { getCollection } from "astro:content";

let message = "Attempting to fetch content...";
try {
  const entries = await getCollection("scratch");
  message = `Found ${entries.length} scratch entries. First entry slug: ${entries[0]?.slug || "none"}`;
} catch (e) {
  message = `Error: ${e.message}`;
}
---

<html>
  <head>
    <title>Content Collection Test</title>
  </head>
  <body>
    <h1>Content Collection Test</h1>
    <p>{message}</p>
  </body>
</html>
