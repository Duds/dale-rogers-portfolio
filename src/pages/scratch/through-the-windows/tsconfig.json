{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "./components/*": ["./components/*"],
      "./types/*": ["./types/*"]
    },
    "types": ["vitest/globals"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "Node16",
    "moduleResolution": "node16"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
