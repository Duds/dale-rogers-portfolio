---
/**
 * Through the Windows - Project Page
 *
 * A visual journey through architectural windows and their stories.
 * This page serves as the main entry point for the Through the Windows project.
 *
 * @component ThroughTheWindows
 */

import Layout from "../../../layouts/Layout.astro";
import Container from "../../../components/layout/Container.astro";

interface Props {
  title?: string;
}

const { title = "Through the Windows | Dale Rogers" } = Astro.props;
---

<Layout title={title}>
  <Container>
    <article class="py-12 md:py-16 lg:py-24">
      <header class="max-w-prose mx-auto text-center mb-12">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 dark:text-white mb-6"
        >
          Through the Windows
        </h1>
        <p class="text-xl text-neutral-600 dark:text-neutral-300">
          A photographic exploration of architecture, light, and perspective
        </p>
      </header>

      <div class="prose dark:prose-invert mx-auto">
        <p>Project content will be populated from markdown files.</p>
      </div>
    </article>
  </Container>
</Layout>
