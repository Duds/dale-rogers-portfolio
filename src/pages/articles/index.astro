---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const articles = await getCollection('articles');
---

<Layout title="Articles">
  <div class="container mx-auto px-4 py-8">
    <h1 class="font-display text-4xl text-text mb-6">Articles</h1>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {articles.map((article) => (
        <a 
          href={`/articles/${article.slug}`}
          class="block bg-background rounded-card shadow-card p-6 hover:shadow-lg transition-shadow"
        >
          <h2 class="font-display text-xl text-text mb-2">{article.data.title}</h2>
          <p class="text-text-secondary mb-4">{article.data.description}</p>
          <div class="flex flex-wrap gap-2">
            {article.data.tags.map((tag) => (
              <span class="px-2 py-1 bg-secondary text-text-secondary text-sm rounded-button">
                {tag}
              </span>
            ))}
          </div>
          <p class="text-text-secondary text-sm mt-4">
            {article.data.pubDate.toLocaleDateString()}
          </p>
        </a>
      ))}
    </div>
  </div>
</Layout> 