---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import CaseStudyCard from "../components/CaseStudyCard.astro";

// Content from content_placeholders.json
const hero = {
  heading: "Design that builds trust",
  intro:
    "Dale Rogers is a service designer helping orgs define, improve, and align their services.",
  ctaLabel: "View my work",
};

const textIntro = [
  "Human-centred design with clarity, care, and commitment to the actual problem.",
  "Design isn't just delivery â€“ it's strategy, structure, and service intelligence.",
];

const services = [
  {
    title: "Service Design",
    description: "End-to-end service alignment using human-centred tools.",
    variant: "purple",
    imageUrl: "/icons/service-design.svg",
  },
  {
    title: "UX Research",
    description: "Synthesis and evidence for decision-making.",
    variant: "black",
    imageUrl: "/icons/ux-research.svg",
  },
  {
    title: "Prototyping",
    description: "Figma, clickable demos, and flow mapping.",
    variant: "green",
    imageUrl: "/icons/prototyping.svg",
  },
  {
    title: "Bid Strategy",
    description: "RFT structuring, response writing, and win themes.",
    variant: "orange",
    imageUrl: "/icons/bid-strategy.svg",
  },
];

const belief = {
  statement: "Good design is strategy made visible.",
  emoji: "ðŸ§ ",
};

// Featured case studies
const featuredCaseStudies = [
  {
    title: "Developing a Bespoke PMO for Rio Tinto Aluminium",
    summary:
      "Created a tailored Project Management Office solution for Rio Tinto Aluminium",
    tags: ["Service Design", "Enterprise", "PMO"],
    slug: "developing-a-bespoke-pmo-as-a-service-for-rio-tinto-aluminiu",
  },
  {
    title: "Making Travel Simple",
    summary:
      "Streamlined travel administration processes for the University of Canberra",
    tags: ["User Research", "Service Design", "Higher Education"],
    slug: "making-travel-simple",
  },
  {
    title: "A Better Fit and Proper Person Test",
    summary:
      "Redesigned verification process for a Commonwealth government agency",
    tags: ["Government", "Service Blueprint", "Process Improvement"],
    slug: "a-better-fit-and-proper-person-test",
  },
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="section-default min-h-[80vh] flex items-center">
    <div class="container-default">
      <h1 class="heading-1 mb-6">
        {hero.heading}
      </h1>
      <p class="body-large max-w-2xl mb-8">
        {hero.intro}
      </p>
      <Button href="/projects" variant="primary">
        {hero.ctaLabel}
      </Button>
    </div>
  </section>

  <!-- Text Intro Section -->
  <section class="section-default section-alt">
    <div class="container-default">
      <div class="max-w-3xl mx-auto">
        {
          textIntro.map((paragraph) => (
            <p class="body-large mb-6">{paragraph}</p>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section-default">
    <div class="container-default">
      <h2 class="heading-2 text-center mb-12">How I Can Help</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          services.map((service) => (
            <div class={`card-service card-service-${service.variant}`}>
              <img
                src={service.imageUrl}
                alt={service.title}
                class="w-12 h-12 mb-4"
              />
              <h3 class="heading-3 mb-2">{service.title}</h3>
              <p class="body-default">{service.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Belief Statement -->
  <section class="section-default section-alt">
    <div class="container-default text-center">
      <div class="text-4xl mb-4">{belief.emoji}</div>
      <p class="heading-2">
        {belief.statement}
      </p>
    </div>
  </section>

  <!-- Featured Case Studies -->
  <section class="section-default">
    <div class="container-default">
      <h2 class="heading-2 text-center mb-12">Featured Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          featuredCaseStudies.map((caseStudy) => (
            <CaseStudyCard
              title={caseStudy.title}
              summary={caseStudy.summary}
              tags={caseStudy.tags}
              slug={caseStudy.slug}
            />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
