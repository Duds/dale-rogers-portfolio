---
import Layout from '@/layouts/BaseLayout.astro';
import Container from '@/components/layout/Container.astro';
import PageHeader from '@/components/ui/PageHeader.astro';

export const prerender = true;
---

<Layout title="Search | Dale Rogers - Service Designer and Digital Strategist">
  <main class="pt-32 md:pt-40">
    <Container narrow={true}>
      <PageHeader
        title="Search"
        description="Find articles, case studies, and insights on service design and digital strategy"
      />
    </Container>

    <Container>
      <div class="text-center py-16">
        <div class="max-w-2xl mx-auto">
          <h2 class="text-2xl font-semibold text-neutral-600 dark:text-neutral-400 mb-8">
            Search functionality is being updated
          </h2>
          <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-8">
            We're currently improving our search experience. In the meantime, you can:
          </p>
          <div class="grid md:grid-cols-2 gap-6 text-left">
            <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 shadow-lg">
              <h3 class="font-semibold text-lg mb-3">Browse Articles</h3>
              <p class="text-neutral-600 dark:text-neutral-400 mb-4">
                Explore our latest insights on service design and digital strategy
              </p>
              <a href="/articles" class="text-primary hover:underline">View Articles →</a>
            </div>
            <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 shadow-lg">
              <h3 class="font-semibold text-lg mb-3">Case Studies</h3>
              <p class="text-neutral-600 dark:text-neutral-400 mb-4">
                See real examples of our work and the impact we've delivered
              </p>
              <a href="/work" class="text-primary hover:underline">View Work →</a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>
