---
import { ViewTransitions } from "astro:transitions";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import "@/styles/global.css";

/**
 * Base layout component with enhanced SEO support
 * @component BaseLayout
 */
interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  keywords?: string;
  article?: {
    publishDate: string;
    modifiedDate: string;
    tags: string[];
    author: {
      name: string;
      image: string;
    };
  };
}

const {
  title,
  description = "Dale Rogers - Service Designer and Digital Strategist",
  image = "/images/og-image.jpg",
  canonicalURL = Astro.url,
  keywords = "service design, digital strategy, product management",
  article,
} = Astro.props;

const siteUrl = import.meta.env.SITE || "https://dalerogers.com.au";
const fullImageUrl = image.startsWith("http")
  ? image
  : `${siteUrl}${image}`;

// Theme initialization script that runs before page loads to prevent flashing
const themeScript = `
  const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
  const storedTheme = localStorage.getItem('theme');

  if (storedTheme === 'dark' || (!storedTheme && prefersDark)) {
    document.documentElement.classList.add('dark');
  } else {
    document.documentElement.classList.remove('dark');
  }
`;
---

<!doctype html>
<html lang="en-AU">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:locale" content="en_AU" />
    <meta property="og:site_name" content="Dale Rogers" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta name="twitter:site" content="@dalerogers" />

    <!-- Article Specific Metadata -->
    {article && (
      <>
        <meta property="article:published_time" content={article.publishDate} />
        <meta property="article:modified_time" content={article.modifiedDate} />
        {article.tags.map(tag => (
          <meta property="article:tag" content={tag} />
        ))}
        <meta property="article:author" content={article.author.name} />
        <meta property="og:image:alt" content={`Cover image for ${title}`} />

        <!-- Structured Data (JSON-LD) -->
        <script type="application/ld+json" set:html={JSON.stringify({
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": title,
          "description": description,
          "image": fullImageUrl,
          "author": {
            "@type": "Person",
            "name": article.author.name,
            "url": `${siteUrl}/about`
          },
          "publisher": {
            "@type": "Organization",
            "name": "Dale Rogers",
            "logo": {
              "@type": "ImageObject",
              "url": `${siteUrl}/images/logo.png`
            }
          },
          "datePublished": article.publishDate,
          "dateModified": article.modifiedDate,
          "url": canonicalURL,
          "keywords": keywords,
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": canonicalURL
          }
        })} />
      </>
    )}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Inject the theme script early to avoid flashing -->
    <script set:html={themeScript} />

    <ViewTransitions />
  </head>
  <body
    class="font-body text-neutral-900 dark:text-white bg-white dark:bg-neutral-900 min-h-screen flex flex-col"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
