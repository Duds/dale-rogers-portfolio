---
/**
 * AboutSection Component
 *
 * A section component that displays the professional profile and biography.
 * Supports rich text formatting with emphasis and strong styles.
 *
 * @component AboutSection
 */

import SectionContainer from "@/components/layout/SectionContainer.astro";
import Button from "@/components/ui/Button.astro";
import "@/styles/components/about-section.css";

interface Props {
  /** Array of biography paragraphs with HTML markup */
  paragraphs: string[];
}

const { paragraphs = [] } = Astro.props;
---

<SectionContainer class="about-section py-32">
  <div class="grid grid-cols-6 gap-8">
    <div class="col-span-6 lg:col-span-4">
      <div
        class="mb-6 text-2xl text-text-secondary about-section__bio prose prose-lg max-w-none"
      >
        {
          paragraphs.map((p) => (
            <p class="mb-6 fade-in-up" set:html={p} data-fade />
          ))
        }
      </div>
      <div class="mt-12">
        <Button variant="black" href="/about" class="fade-in-up" data-fade>
          Get to know me
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </Button>
      </div>
    </div>
  </div>
</SectionContainer>

<script type="module">
  window.addEventListener("DOMContentLoaded", async () => {
    const mod = await import("/scripts/fadeInOnScroll.js");
    mod.fadeInOnScroll();
  });
</script>

<style>
  :global(.about-section__bio .emphasis) {
    @apply font-medium italic;
  }
  :global(.about-section__bio .strong) {
    @apply text-neutral-900 dark:text-white font-bold;
  }
</style>
