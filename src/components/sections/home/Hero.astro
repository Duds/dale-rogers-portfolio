---
// Hero section component
import Button from "@/components/ui/Button.astro";
import Heading from "@/components/ui/Heading.astro";
import Container from "@/components/layout/Container.astro";

/**
 * Hero section for the home page
 * @component Hero
 * @description Displays a dramatic slogan, description, and call-to-action button.
 * @australian-english
 */

// Dramatic slogan with line breaks for visual impact
const slogan = "Service\nDesign\nStrategy";
const description =
  "I'm Dale Rogers, a service designer and strategy consultant, helping organisations transform how they deliver value. With decades of experience, I bridge the gap between human needs and organisational goals.";
---

<div class="pt-32 md:pt-40 flex items-center py-20">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 w-full">
      <!-- Left Column -->
      <div class="flex flex-col justify-center">
        <Heading
          level={1}
          class="text-6xl md:text-7xl lg:text-8xl font-bold text-neutral-900 dark:text-white leading-tight"
        >
          {
            slogan.split("\n").map((line, i) => (
              <>
                {i > 0 && <br />}
                {line}
              </>
            ))
          }
        </Heading>
      </div>

      <!-- Right Column -->
      <div class="flex flex-col justify-end">
        <p
          class="text-2xl text-neutral-600 dark:text-neutral-400 mb-8 max-w-2xl"
        >
          {description}
        </p>
        <div>
          <Button variant="primary" href="/work">
            View Work
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </Container>
</div>
