---
import Button from "@/components/ui/Button.astro";
import Heading from "@/components/ui/Heading.astro";
import Container from "@/components/layout/Container.astro";
import "@/styles/components/my-values.css";

interface Props {
  /** Title for the values card (h2) */
  title?: string;
  /** Subtitle for the values card (h3) */
  subtitle?: string;
  /** Image URL for the photocard */
  imageUrl?: string;
  /** Button text */
  buttonText?: string;
  /** Button link destination */
  buttonLink?: string;
}

// Default values
const {
  title = "My Values",
  subtitle = "Designing with empathy, accessibility and inclusivity at the forefront of everything I do.",
  imageUrl = "https://images.unsplash.com/photo-1600202751116-3e0226e1e7a0?q=80&w=2670&auto=format&fit=crop",
  buttonText = "Explore My Values",
  buttonLink = "/values",
} = Astro.props;
---

<Container contentMargin={true} class="my-values-section">
  <div class="flex flex-col h-full">
    <!-- Headings above the card -->
    <div class="mb-4 md:mb-6 text-left">
      <Heading
        level={2}
        class="my-values-title mb-2 md:mb-4 font-normal text-xl"
      >
        {title}
      </Heading>
      <Heading
        level={3}
        class="my-values-subtitle leading-tight text-2xl md:text-3xl font-bold"
      >
        {subtitle}
      </Heading>
    </div>
    <!-- Photo card - full width, fills available space -->
    <div class="my-values-card">
      <img
        src={imageUrl}
        alt="A group of people collaborating and brainstorming together, symbolizing inclusive design and shared values"
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
      />
    </div>
    <!-- Button beneath the card -->
    <div class="my-values-button">
      <Button variant="primary" href={buttonLink}>
        {buttonText}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </Button>
    </div>
  </div>
</Container>
