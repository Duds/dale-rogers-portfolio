---
import Button from "@/components/ui/Button.astro";
import Heading from "@/components/ui/Heading.astro";
import SectionContainer from "@/components/layout/SectionContainer.astro";
import "@/styles/components/my-values.css";

interface Props {
  /** Title for the values card (h2) */
  title?: string;
  /** Subtitle for the values card (h3) */
  subtitle?: string;
  /** Image URL for the photocard */
  imageUrl?: string;
  /** Button text */
  buttonText?: string;
  /** Button link destination */
  buttonLink?: string;
  /** Font family for the heading - 'fraunces' or 'dm-sans' */
  font?: "fraunces" | "dm-sans";
}

// Default values
const {
  title = "My Values",
  subtitle = "Designing with empathy, accessibility and inclusivity at the forefront of everything I do.",
  imageUrl = "https://images.unsplash.com/photo-1532619675605-1ede6c2ed2b0?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  buttonText = "Explore My Values",
  buttonLink = "/values",
  font = "fraunces",
} = Astro.props;
---

<SectionContainer class="my-values-section">
  <div class="flex flex-col h-full">
    <!-- Headings above the card -->
    <div class="mb-4 md:mb-6 text-left">
      <Heading
        level={2}
        font="dm-sans"
        size="2xl"
        class="text-text-secondary mb-2 md:mb-4 font-normal"
      >
        {title}
      </Heading>
      <Heading
        level={3}
        font={font}
        size="2xl"
        class="text-heading leading-tight"
      >
        {subtitle}
      </Heading>
    </div>
    <!-- Photo card - full width, fills available space -->
    <div class="my-values-card">
      <img
        src={imageUrl}
        alt="A group of people collaborating and brainstorming together, symbolizing inclusive design and shared values"
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
      />
    </div>
    <!-- Button beneath the card -->
    <div class="my-values-button">
      <Button variant="black" href={buttonLink}>
        {buttonText}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </Button>
    </div>
  </div>
</SectionContainer>
