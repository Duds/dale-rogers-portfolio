---
import Container from "@/components/layout/Container.astro";
import Button from "@/components/ui/Button.astro";
import "@/styles/components/services.css";

interface Props {
  title?: string;
  description?: string;
}

interface Service {
  title: string;
  description: string;
  icon: string;
  variant: "primary" | "secondary" | "accent" | "brand";
}

const {
  title = "Our Services",
  description = "Comprehensive solutions tailored to your needs",
} = Astro.props;

const services: Service[] = [
  {
    title: "Strategic Design",
    description: "End-to-end design solutions that drive business outcomes",
    icon: "codesign",
    variant: "primary",
  },
  {
    title: "User Experience",
    description: "Human-centred design that creates meaningful connections",
    icon: "evaluation",
    variant: "secondary",
  },
  {
    title: "Design Systems",
    description: "Scalable design infrastructure for consistent experiences",
    icon: "blueprint",
    variant: "accent",
  },
  {
    title: "Innovation Consulting",
    description: "Strategic guidance to transform your business through design",
    icon: "codesign",
    variant: "brand",
  },
];

const variantStyles = {
  primary: "bg-primary-main hover:bg-primary-dark text-primary-contrast",
  secondary:
    "bg-secondary-main hover:bg-secondary-dark text-secondary-contrast",
  accent: " hover: text-accent-contrast",
  brand: " hover: text-white",
};

// Simple icon path function
const getIconPath = (iconName: string): string => {
  return `/icons/${iconName}.svg`;
};
---

<section class="py-16 md:py-24" style="background-color: var(--color-background-primary);">
  <Container>
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold  mb-6" style="color: var(--color-text-primary);">
        {title}
      </h2>
      <p class="text-xl  max-w-3xl mx-auto" style="color: var(--color-text-secondary);">
        {description}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service) => (
          <div class="text-center group">
            <div
              class={`inline-flex items-center justify-center w-16 h-16 rounded-2xl mb-6 transition-all duration-300 group-hover:scale-110 ${variantStyles[service.variant]}`}
            >
              <img
                src={getIconPath(service.icon)}
                alt=""
                class="w-8 h-8"
                width="32"
                height="32"
              />
            </div>

            <h3 class="text-xl font-bold  mb-4" style="color: var(--color-text-primary);">
              {service.title}
            </h3>

            <p class="mb-6 leading-relaxed" style="color: var(--color-text-secondary);">
              {service.description}
            </p>

            <Button
              variant="ghost"
              ghostColour="primary"
              class="group-hover:bg-primary-main group-hover:text-primary-contrast group-hover:border-primary-main transition-all duration-300"
            >
              Learn More
            </Button>
          </div>
        ))
      }
    </div>
  </Container>
</section>
