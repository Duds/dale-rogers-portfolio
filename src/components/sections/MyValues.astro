---
// Temporary values section with marketing copy
const content = {
  title: "Core Principles That Guide My Work",
  image: "/images/values-hero.jpg",
  values: [
    {
      name: "Human-Centered",
      description:
        "Services should solve real problems for real people. I prioritize user needs over organizational convenience.",
    },
    {
      name: "Evidence-Based",
      description:
        "Decisions grounded in research and data, not assumptions. I validate every design choice with user testing.",
    },
    {
      name: "Practical Innovation",
      description:
        "Solutions must be both visionary and implementable. I balance creativity with technical feasibility.",
    },
    {
      name: "Collaborative Approach",
      description:
        "Great design happens together. I work transparently with stakeholders at every level.",
    },
  ],
};

interface Value {
  name: string;
  description: string;
}
---

<section class="my-values py-20 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <h2
      class="text-4xl md:text-5xl font-bold mb-12 text-center text-gray-900 dark:text-white"
    >
      {content.title}
    </h2>

    <div class="grid md:grid-cols-2 gap-8 md:gap-12 max-w-6xl mx-auto">
      {
        content.values.map((value: Value) => (
          <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-soft dark:shadow-soft-dark border border-gray-200 dark:border-gray-700">
            <h3 class="text-2xl font-bold mb-3 text-primary dark:text-primary-light">
              {value.name}
            </h3>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              {value.description}
            </p>
          </div>
        ))
      }
    </div>

    <div class="mt-16 max-w-4xl mx-auto text-center">
      <p class="text-xl mb-6 text-gray-700 dark:text-gray-300">
        These principles guide every project I undertake, ensuring solutions
        that are:
      </p>
      <div class="flex flex-wrap justify-center gap-3">
        <span
          class="px-4 py-2 bg-primary/10 text-primary dark:bg-primary-dark/20 dark:text-primary-light rounded-full text-sm font-medium"
          >User-Friendly</span
        >
        <span
          class="px-4 py-2 bg-primary/10 text-primary dark:bg-primary-dark/20 dark:text-primary-light rounded-full text-sm font-medium"
          >Sustainable</span
        >
        <span
          class="px-4 py-2 bg-primary/10 text-primary dark:bg-primary-dark/20 dark:text-primary-light rounded-full text-sm font-medium"
          >Measurable</span
        >
        <span
          class="px-4 py-2 bg-primary/10 text-primary dark:bg-primary-dark/20 dark:text-primary-light rounded-full text-sm font-medium"
          >Impactful</span
        >
      </div>
    </div>
  </div>
</section>

<style>
  .shadow-soft {
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03);
  }
  .shadow-soft-dark {
    box-shadow:
      0 4px 6px -1px rgba(255, 255, 255, 0.05),
      0 2px 4px -1px rgba(255, 255, 255, 0.03);
  }
  /* Removed animation styles */
</style>
