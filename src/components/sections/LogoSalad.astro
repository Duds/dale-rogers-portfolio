---
import Container from "../Container.astro";

interface ClientLogo {
  name: string;
  logo: string;
  url: string;
}

const clients: ClientLogo[] = [
  {
    name: "Department of Health",
    logo: "/images/logos/doh.png",
    url: "https://www.health.gov.au/",
  },
  {
    name: "Services Australia",
    logo: "/images/logos/services-australia.png",
    url: "https://www.servicesaustralia.gov.au/",
  },
  {
    name: "Department of Education",
    logo: "/images/logos/education.png",
    url: "https://www.education.gov.au/",
  },
  {
    name: "ATO",
    logo: "/images/logos/ato.png",
    url: "https://www.ato.gov.au/",
  },
  {
    name: "NDIS",
    logo: "/images/logos/ndis.png",
    url: "https://www.ndis.gov.au/",
  },
  {
    name: "DTA",
    logo: "/images/logos/dta.png",
    url: "https://www.dta.gov.au/",
  },
];
---

<section class="logo-salad py-20 bg-gray-50 dark:bg-gray-900">
  <Container>
    <h2
      class="text-2xl font-semibold text-gray-600 dark:text-gray-400 mb-4 text-center"
    >
      Trusted by
    </h2>
    <div class="flex flex-wrap justify-center items-center gap-12 md:gap-16">
      {
        clients.map((client) => (
          <a
            href={client.url}
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-60 hover:opacity-100 transition-opacity duration-300"
          >
            <img
              src={client.logo}
              alt={client.name}
              class="h-12 md:h-16 w-auto"
              loading="lazy"
            />
          </a>
        ))
      }
    </div>
  </Container>
</section>
