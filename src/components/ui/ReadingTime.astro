---
import Icon from "./Icon.astro";

/**
 * Displays estimated reading time
 * @component ReadingTime
 */
interface Props {
  minutes: number;
  class?: string;
}

const { minutes, class: className = "" } = Astro.props;

// Format the minutes nicely
const formattedTime =
  minutes <= 1 ? "1 minute read" : `${minutes} minutes read`;
---

<span class={`flex items-center gap-1 ${className}`}>
  <Icon name="clock" class="w-4 h-4" />
  <span>{formattedTime}</span>
</span>
