---
/**
 * @fileoverview Heading component for consistent typography hierarchy.
 * Supports multiple levels with professional styling and accessibility.
 */

interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const { level = 1, class: className } = Astro.props;

const baseClasses = "heading";
const levelClasses = `heading--level-${level}`;
const combinedClasses = [baseClasses, levelClasses, className]
  .filter(Boolean)
  .join(" ");
---

{
  level === 1 && (
    <h1 class={combinedClasses}>
      <slot />
    </h1>
  )
}
{
  level === 2 && (
    <h2 class={combinedClasses}>
      <slot />
    </h2>
  )
}
{
  level === 3 && (
    <h3 class={combinedClasses}>
      <slot />
    </h3>
  )
}
{
  level === 4 && (
    <h4 class={combinedClasses}>
      <slot />
    </h4>
  )
}
{
  level === 5 && (
    <h5 class={combinedClasses}>
      <slot />
    </h5>
  )
}
{
  level === 6 && (
    <h6 class={combinedClasses}>
      <slot />
    </h6>
  )
}
