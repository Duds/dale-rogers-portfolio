---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className = "" } = Astro.props;

// Format date according to Australian standards (DD/MM/YYYY)
const formattedDate = new Date(date).toLocaleDateString("en-AU", {
  day: "2-digit",
  month: "2-digit",
  year: "numeric",
});
---

<time datetime={date.toISOString()} class:list={["text-sm", className]}>
  {formattedDate}
</time>
