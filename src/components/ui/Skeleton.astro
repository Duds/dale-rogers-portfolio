---
interface Props {
  class?: string;
  width?: string;
  height?: string;
}

const { class: className, width = "w-full", height = "h-4" } = Astro.props;
---

<div
  class={`bg-gray-200 dark:bg-gray-700 rounded-md animate-pulse ${width} ${height} ${className || ""}`}
  data-slot="skeleton"
  role="status"
  aria-label="Loading content"
>
</div>
