---
interface Props {
  /** The text content of the tag */
  text: string;
  /** Optional class to extend the tag styling */
  class?: string;
  /** Whether the tag is clickable (adds hover state) */
  clickable?: boolean;
}

const { text, class: className = "", clickable = false } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center px-3 py-1 text-xs font-medium",
    "rounded-[9999px]", // Using a very large radius for pill shape
    "bg-tag dark:bg-tag-dark text-tag-text dark:text-tag-text-dark",
    clickable &&
      "hover:bg-tag-hover dark:hover:bg-tag-hover-dark transition-colors cursor-pointer",
    className,
  ]}
>
  {text}
</span>
