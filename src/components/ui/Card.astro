---
/**
 * @fileoverview Card component for displaying content in a structured layout.
 * Supports clickable cards with hover effects and professional styling.
 */

import type { CardProps } from "./types";
import "../../styles/components/card.css";

interface Props extends CardProps {}

const { title, clickable = false, href, class: className, ...rest } = Astro.props;

const baseClasses = "card";
const clickableClasses = clickable ? "card--clickable" : "";
const combinedClasses = [baseClasses, clickableClasses, className]
  .filter(Boolean)
  .join(" ");
---

{
  clickable && href ? (
    <a href={href} class={combinedClasses} {...rest}>
      <div class="card__content">
        {title && <h3 class="card__title">{title}</h3>}
        <div class="card__body">
          <slot />
        </div>
      </div>
    </a>
  ) : (
    <div class={combinedClasses} {...rest}>
      <div class="card__content">
        {title && <h3 class="card__title">{title}</h3>}
        <div class="card__body">
          <slot />
        </div>
      </div>
    </div>
  )
}
