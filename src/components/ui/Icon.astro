---
/**
 * Icon component that utilises SVG icons from the public directory.
 * Provides a consistent interface for using icons across the site.
 */

interface Props {
  name: string;
  class?: string;
  size?: number;
}

const { name, class: className, size = 24 } = Astro.props;
const iconPath = `/icons/${name}.svg`;
---

<img
  src={iconPath}
  class={`inline-block ${className || ""}`}
  width={size}
  height={size}
  aria-hidden="true"
  alt=""
/>

<style>
  img {
    vertical-align: middle;
  }
</style>
