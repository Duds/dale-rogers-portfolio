---
/**
 * @fileoverview Section heading component for consistent section titles.
 * Supports different font families and professional styling.
 */

interface Props {
  /** The heading text content */
  text: string;
  /** Font family for the heading - 'inter' or 'dm-sans' */
  font?: "inter" | "dm-sans";
  /** Additional CSS classes */
  class?: string;
}

const { text, font = "inter", class: className } = Astro.props;

const baseClasses = "section-heading";
const fontClasses = font === "inter" ? "font-heading" : "font-body";
const combinedClasses = [baseClasses, fontClasses, className]
  .filter(Boolean)
  .join(" ");
---

<h2 class={combinedClasses}>
  {text}
</h2>
