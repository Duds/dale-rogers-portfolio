---
/**
 * @fileoverview Page header component for consistent page titles.
 * Supports different font families and professional styling.
 */

interface Props {
  /** The heading text content */
  title: string;
  /** Optional description text */
  description?: string;
  /** Font family for the heading - 'inter' or 'dm-sans' */
  font?: "inter" | "dm-sans";
  /** Additional CSS classes */
  class?: string;
}

const { title, description, font = "inter", class: className } = Astro.props;

const baseClasses = "page-header";
const fontClasses = font === "inter" ? "font-heading" : "font-body";
const combinedClasses = [baseClasses, fontClasses, className]
  .filter(Boolean)
  .join(" ");
---

<div class={combinedClasses}>
  <h1 class="page-header__title">
    {title}
  </h1>
  {description && (
    <p class="page-header__description">
      {description}
    </p>
  )}
</div>
