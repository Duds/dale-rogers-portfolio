---
/**
 * Generic page header component for consistent page headers across the site
 * @component PageHeader
 *
 * @example
 * ```astro
 * <PageHeader
 *   title="Case Studies"
 *   description="Explore my portfolio of successful projects."
 * />
 * ```
 */
import Heading from "@/components/ui/Heading.astro";

interface Props {
  /** The main title for the page header */
  title: string;
  /** Descriptive text for the page header */
  description: string;
  /** Font family for the heading - 'fraunces' or 'dm-sans' */
  font?: "fraunces" | "dm-sans";
}

const { title, description, font = "fraunces" } = Astro.props;
---

<section
  class="pt-32 md:pt-40 py-16 px-6 md:px-12 bg-surface dark:bg-surface-dark"
>
  <div class="max-w-6xl mx-auto">
    <Heading
      level={1}
      font={font}
      size="custom"
      class="text-6xl md:text-7xl lg:text-8xl !font-black mb-6"
    >
      {title}
    </Heading>
    <p class="text-xl md:text-2xl text-subheading max-w-3xl">
      {description}
    </p>
  </div>
</section>
