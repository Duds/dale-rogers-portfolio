---
/**
 * @fileoverview Container component for consistent content width and spacing.
 * Provides professional layout structure with responsive design.
 */

import "@/styles/components/container.css";

interface Props {
  /** Additional CSS classes */
  class?: string;
  /** Whether to apply full-width layout */
  fullWidth?: boolean;
  /** Whether to apply narrow width layout */
  narrow?: boolean;
  /** Whether to apply content margin variant (consistent margins for content sections) */
  contentMargin?: boolean;
}

const {
  class: className,
  fullWidth = false,
  narrow = false,
  contentMargin = false,
} = Astro.props;

const baseClasses = "container";
const widthClasses = fullWidth
  ? "container--full"
  : narrow
    ? "container--narrow"
    : contentMargin
      ? "container--content-margin"
      : "container--standard";
const combinedClasses = [baseClasses, widthClasses, className]
  .filter(Boolean)
  .join(" ");
---

<div class={combinedClasses}>
  <slot />
</div>
