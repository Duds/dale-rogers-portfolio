---
import Navigation from "./Navigation.astro";

interface Props {
  /** Whether the header should be transparent */
  isTransparent?: boolean;
}

const { isTransparent = true } = Astro.props;
---

<header
  class:list={[
    "w-full z-40",
    {
      "bg-surface-header-transparent": isTransparent,
      "bg-surface-header dark:bg-surface-header-dark backdrop-blur-sm":
        !isTransparent,
    },
  ]}
>
  <Navigation />
</header>

<script>
  // Theme initialization
  const initTheme = () => {
    const theme =
      localStorage.getItem("theme") ??
      (window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light");

    document.documentElement.classList.toggle("dark", theme === "dark");
  };

  // Initialize theme on page load and navigation
  document.addEventListener("astro:page-load", initTheme);

  // Watch for system theme changes
  window
    .matchMedia("(prefers-color-scheme: dark)")
    .addEventListener("change", (e) => {
      if (!localStorage.getItem("theme")) {
        document.documentElement.classList.toggle("dark", e.matches);
      }
    });
</script>
