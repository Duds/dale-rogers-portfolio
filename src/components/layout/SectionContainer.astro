---
/**
 * SectionContainer ensures consistent horizontal padding and full width for sections.
 * @component SectionContainer
 * @example
 * <SectionContainer>
 *   <Hero />
 * </SectionContainer>
 */
const { class: className = "", ...rest } = Astro.props;
---

<section class={`w-full px-6 md:px-12 ${className}`} {...rest}>
  <slot />
</section>
