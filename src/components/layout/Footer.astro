---
import Container from "@/components/layout/Container.astro";
import "@/styles/components/footer.css";
import Button from "@/components/ui/Button.astro";
import { ArrowRight, Linkedin, BookOpen } from "lucide-astro";

interface Link {
  name: string;
  href: string;
  icon?: string;
}

const currentYear = new Date().getFullYear();

// Socials column
const socialLinks: Link[] = [
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/dalerogers",
    icon: "linkedin",
  },
  {
    name: "Medium",
    href: "https://medium.com/@dalerogers",
    icon: "medium",
  },
];

// Sitemap column
const sitemapLinks: Link[] = [
  { name: "Home", href: "/" },
  { name: "Work", href: "/work" },
  { name: "Articles", href: "/articles" },
  { name: "Scratch", href: "/scratch" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

// Info column
const infoLinks: Link[] = [
  { name: "Colophon", href: "/colophon" },
  { name: "Terms and Conditions", href: "/terms" },
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Cookie Policy", href: "/cookie-policy" },
];
---

<footer class="footer">
  <Container contentMargin={true}>
    <div class="footer-inner">
      <!-- Acknowledgement of Country -->
      <div class="mb-16">
        <div
          class="flex flex-col items-center md:items-start space-y-4 max-w-3xl"
        >
          <p class="text-footer-text-secondary text-center md:text-left">
            I acknowledge the Ngunnawal people as the traditional custodians of
            the land. I pay my respects to Elders past, present and emerging.
          </p>
          <p class="acknowledgement-slogan font-medium">
            Always Was, Always Will Be
          </p>
        </div>
      </div>
      <div class="grid lg:grid-cols-3 gap-12 lg:gap-20">
        <!-- Left side with CTA -->
        <div class="lg:col-span-2 space-y-8">
          <h2
            class="text-4xl md:text-6xl font-display leading-tight md:leading-tight footer-main-heading"
          >
            Transforming services,<br />enriching lives,<br />together
          </h2>
          <div>
            <Button
              variant="accent"
              href="/contact"
              class="button button--accent text-2xl px-12 py-6"
            >
              Get in touch
              <ArrowRight class="h-6 w-6" />
            </Button>
          </div>
        </div>
        <!-- Right side with columns -->
        <div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Sitemap Column -->
            <div class="space-y-6">
              <h3 class="footer-heading">Sitemap</h3>
              <ul class="space-y-4 list-none p-0 m-0">
                {
                  sitemapLinks.map((link) => (
                    <li>
                      <a href={link.href} class="footer-link">
                        {link.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
            <!-- Social Links Column -->
            <div class="space-y-6">
              <h3 class="footer-heading">Connect</h3>
              <ul class="space-y-4 list-none p-0 m-0">
                {
                  socialLinks.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center footer-link"
                      >
                        {link.icon === "linkedin" ? (
                          <Linkedin class="w-5 h-5 mr-2" aria-hidden="true" />
                        ) : link.icon === "medium" ? (
                          <BookOpen class="w-5 h-5 mr-2" aria-hidden="true" />
                        ) : null}
                        {link.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
            <!-- Legal Column -->
            <div class="space-y-6">
              <h3 class="footer-heading">Legal</h3>
              <ul class="space-y-4 list-none p-0 m-0">
                {
                  infoLinks.map((link) => (
                    <li>
                      <a href={link.href} class="footer-link">
                        {link.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</footer>

<!-- Copyright section with proper padding and contrast -->
<div class="copyright-section">
  <Container contentMargin={true}>
    <div
      class="flex flex-col md:flex-row md:justify-between md:items-center gap-4"
    >
      <p class="copyright-text">
        &copy; {currentYear} Dale Rogers. All rights reserved.
      </p>
      <p class="copyright-text flex items-center">
        Made with <span class="copyright-heart">❤️</span> in Canberra (Ngunnawal
        Country)
      </p>
    </div>
  </Container>
</div>
