---
import Container from "@/components/layout/Container.astro";
import Button from "@/components/ui/Button.astro";

interface Link {
  name: string;
  href: string;
  icon?: string;
}

const currentYear = new Date().getFullYear();

// Socials column
const socialLinks: Link[] = [
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/dale-rogers",
    icon: "linkedin",
  },
  {
    name: "Instagram",
    href: "https://instagram.com/dale.rogers",
    icon: "instagram",
  },
];

// Sitemap column
const sitemapLinks: Link[] = [
  { name: "Home", href: "/" },
  { name: "Work", href: "/work" },
  { name: "Articles", href: "/articles" },
  { name: "Scratch", href: "/scratch" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

// Info column
const infoLinks: Link[] = [
  { name: "Colophon", href: "/colophon" },
  { name: "Terms and Conditions", href: "/terms" },
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Cookie Policy", href: "/cookie-policy" },
];
---

<footer
  class="relative bg-neutral-100 dark:bg-neutral-900 py-20 overflow-hidden"
>
  <Container>
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
      <!-- Left side with CTA -->
      <div class="space-y-8">
        <h2
          class="text-4xl md:text-5xl font-display text-neutral-900 dark:text-neutral-50"
        >
          Let's create something<br />together
        </h2>
        <div>
          <Button variant="primary" href="/contact">Get in touch</Button>
        </div>
      </div>

      <!-- Right side with columns -->
      <div class="space-y-12">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
          <!-- Sitemap Column -->
          <div class="space-y-6">
            <h3
              class="text-sm font-medium text-neutral-900 dark:text-neutral-50"
            >
              Sitemap
            </h3>
            <ul class="space-y-4">
              {
                sitemapLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Social Links Column -->
          <div class="space-y-6">
            <h3
              class="text-sm font-medium text-neutral-900 dark:text-neutral-50"
            >
              Connect
            </h3>
            <ul class="space-y-4">
              {
                socialLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                    >
                      <img
                        src={`/icons/${link.icon}.svg`}
                        alt=""
                        aria-hidden="true"
                        class="w-5 h-5 mr-2"
                        width="20"
                        height="20"
                      />
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Legal Column -->
          <div class="space-y-6 col-span-2 md:col-span-1">
            <h3
              class="text-sm font-medium text-neutral-900 dark:text-neutral-50"
            >
              Legal
            </h3>
            <ul class="space-y-4">
              {
                infoLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="pt-8 border-t border-neutral-200 dark:border-neutral-800">
          <p class="text-sm text-neutral-600 dark:text-neutral-400">
            &copy; {currentYear} Dale Rogers. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </Container>

  <!-- Decorative background text -->
  <div
    class="absolute bottom-0 right-0 -mb-8 -mr-8 text-9xl font-display font-bold text-neutral-200/50 dark:text-neutral-800/50 select-none pointer-events-none"
  >
    DESIGN • STRATEGY • INNOVATION
  </div>
</footer>
