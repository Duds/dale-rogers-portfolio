---
import Container from "@/components/layout/Container.astro";

interface Link {
  name: string;
  href: string;
  icon?: string;
}

const currentYear = new Date().getFullYear();

// Socials column
const socialLinks: Link[] = [
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/dale-rogers",
    icon: "linkedin-white",
  },
  {
    name: "Medium",
    href: "https://medium.com/@dale-rogers",
    icon: "medium-white",
  },
];

// Sitemap column
const sitemapLinks: Link[] = [
  { name: "Home", href: "/" },
  { name: "Work", href: "/work" },
  { name: "Articles", href: "/articles" },
  { name: "Scratch", href: "/scratch" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

// Info column
const infoLinks: Link[] = [
  { name: "Colophon", href: "/colophon" },
  { name: "Terms and Conditions", href: "/terms" },
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Cookie Policy", href: "/cookie-policy" },
];
---

<footer class="relative bg-black py-20 overflow-hidden w-full">
  <Container fullWidth={true}>
    <!-- Acknowledgement of Country -->
    <div class="mb-16 text-neutral-400 text-sm max-w-3xl">
      <p class="text-neutral-400 !text-neutral-400">
        We acknowledge the Ngunnawal people as the traditional custodians of the
        land on which we work and live. We pay our respects to Elders past,
        present and emerging, and recognise their continuing connection to land,
        waters and culture.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
      <!-- Left side with CTA -->
      <div class="space-y-8">
        <h2 class="text-4xl md:text-6xl font-display text-white">
          Transforming services,<br />enriching lives,<br />together
        </h2>
        <div>
          <a href="/contact" class="btn-footer">
            Get in touch
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right side with columns -->
      <div class="space-y-12">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
          <!-- Sitemap Column -->
          <div class="space-y-6">
            <h3 class="text-3xl font-medium text-white">Sitemap</h3>
            <ul class="space-y-4 list-none p-0 m-0">
              {
                sitemapLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-neutral-400 text-xl hover:text-white transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Social Links Column -->
          <div class="space-y-6">
            <h3 class="text-3xl font-medium text-white">Connect</h3>
            <ul class="space-y-4 list-none p-0 m-0">
              {
                socialLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center text-xl text-neutral-400 hover:text-white transition-colors"
                    >
                      <img
                        src={`/icons/${link.icon}.svg`}
                        alt=""
                        aria-hidden="true"
                        class="w-5 h-5 mr-2"
                        width="20"
                        height="20"
                      />
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Legal Column -->
          <div class="space-y-6 col-span-2 md:col-span-1">
            <h3 class="text-3xl font-medium text-white">Legal</h3>
            <ul class="space-y-4 list-none p-0 m-0">
              {
                infoLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-neutral-400 text-xl hover:text-white transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="pt-8">
          <div
            class="flex flex-col md:flex-row md:justify-between md:items-center gap-4"
          >
            <p class="text-sm !text-neutral-400">
              &copy; {currentYear} Dale Rogers. All rights reserved.
            </p>
            <p class="text-sm !text-neutral-400 flex items-center">
              Made with <span class="text-red-500 mx-1">❤️</span> in Canberra (Ngunnawal
              Country)
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>

  <!-- Decorative background text -->
  <div
    class="absolute bottom-0 right-0 w-screen text-[17vw] font-display font-bold text-neutral-800/50 select-none pointer-events-none translate-y-1/3 transition-transform duration-300 ease-in-out overflow-hidden whitespace-nowrap -z-10"
  >
    Dale Rogers
  </div>
</footer>
