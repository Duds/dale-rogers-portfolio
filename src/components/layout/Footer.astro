---
import Container from "@/components/layout/Container.astro";

const currentYear = new Date().getFullYear();

// Socials column
const socialLinks = [
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/dale-rogers",
    icon: "linkedin",
  },
  {
    name: "Instagram",
    href: "https://instagram.com/dale.rogers",
    icon: "instagram",
  },
];

// Sitemap column
const sitemapLinks = [
  { name: "Home", href: "/" },
  { name: "Work", href: "/work" },
  { name: "Articles", href: "/articles" },
  { name: "Scratch", href: "/scratch" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

// Info column
const infoLinks = [
  { name: "Colophon", href: "/colophon" },
  { name: "Terms and Conditions", href: "/terms" },
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Cookie Policy", href: "/cookie-policy" },
];
---

<footer class="footer-base">
  <Container fullWidth={true}>
    <div class="footer-content">
      <!-- Left side with CTA -->
      <div class="footer-cta">
        <h2 class="footer-heading">Let's create something<br />together</h2>
        <a href="/contact" class="footer-button">Get in touch</a>
      </div>

      <!-- Right side with columns -->
      <div class="footer-columns">
        <div class="footer-grid">
          <!-- Sitemap Column -->
          <div>
            <h3 class="footer-column-heading">Sitemap</h3>
            <ul class="space-y-2">
              {
                sitemapLinks.map((link) => (
                  <li>
                    <a href={link.href} class="footer-link">
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Social Links Column -->
          <div>
            <h3 class="footer-column-heading">Connect</h3>
            <ul class="space-y-2">
              {
                socialLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="footer-social-link"
                    >
                      <img
                        src={`/icons/${link.icon}.svg`}
                        alt={link.name}
                        class="w-5 h-5 mr-2"
                      />
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Legal Column -->
          <div>
            <h3 class="footer-column-heading">Legal</h3>
            <ul class="space-y-2">
              {
                infoLinks.map((link) => (
                  <li>
                    <a href={link.href} class="footer-link">
                      {link.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="footer-copyright">
          <p class="footer-copyright-text">
            &copy; {currentYear} Dale Rogers. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </Container>

  <!-- Decorative background text -->
  <div class="footer-decorative-text">DESIGN • STRATEGY • INNOVATION</div>
</footer>

<style>
  .footer-base {
    @apply relative bg-black text-white py-20 overflow-hidden;
  }

  .footer-content {
    @apply flex flex-col md:flex-row justify-between gap-12 md:gap-24;
  }

  .footer-cta {
    @apply md:w-3/5;
  }

  .footer-heading {
    @apply text-4xl md:text-6xl font-heading mb-8;
  }

  .footer-button {
    @apply inline-flex items-center justify-center rounded-pill px-8 py-4 text-xl md:text-2xl font-medium transition-colors duration-200
           bg-white text-black hover:bg-purple-500 hover:text-white;
  }

  .footer-columns {
    @apply md:w-2/5;
  }

  .footer-grid {
    @apply grid grid-cols-1 sm:grid-cols-3 gap-8 mb-12;
  }

  .footer-column-heading {
    @apply text-xl font-heading mb-4;
  }

  .footer-link {
    @apply text-white hover:text-purple-500 transition-colors;
  }

  .footer-social-link {
    @apply inline-flex items-center text-white hover:text-purple-500 transition-colors;
  }

  .footer-copyright {
    @apply pt-8 border-t border-white/10;
  }

  .footer-copyright-text {
    @apply text-white/50 text-sm;
  }

  .footer-decorative-text {
    @apply absolute bottom-0 left-0 w-screen text-left select-none pointer-events-none whitespace-nowrap
           font-heading text-[18vw] leading-none text-white/5 translate-y-[45%] tracking-[-.02em];
  }
</style>
