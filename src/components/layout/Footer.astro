---
import Container from "@/components/layout/Container.astro";
import "@/styles/components/footer.css";

interface Link {
  name: string;
  href: string;
  icon?: string;
}

const currentYear = new Date().getFullYear();

// Socials column
const socialLinks: Link[] = [
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/dale-rogers",
    icon: "linkedin-white",
  },
  {
    name: "Medium",
    href: "https://medium.com/@dale-rogers",
    icon: "medium-white",
  },
];

// Sitemap column
const sitemapLinks: Link[] = [
  { name: "Home", href: "/" },
  { name: "Work", href: "/work" },
  { name: "Articles", href: "/articles" },
  { name: "Scratch", href: "/scratch" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

// Info column
const infoLinks: Link[] = [
  { name: "Colophon", href: "/colophon" },
  { name: "Terms and Conditions", href: "/terms" },
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Cookie Policy", href: "/cookie-policy" },
];
---

<footer class="footer">
  <Container fullWidth={true}>
    <div class="footer-inner">
      <!-- Acknowledgement of Country -->
      <div class="mb-16 px-8 md:px-12">
        <div
          class="flex flex-col items-center md:items-start space-y-4 max-w-3xl"
        >
          <p class="text-footer-text-secondary text-center md:text-left">
            I acknowledge the Ngunnawal people as the traditional custodians of
            the land. I pay my respects to Elders past, present and emerging.
          </p>
          <p class="acknowledgement-slogan font-medium">
            Always Was, Always Will Be
          </p>
        </div>
      </div>
      <div class="grid lg:grid-cols-3 gap-12 lg:gap-20 px-8 md:px-12">
        <!-- Left side with CTA -->
        <div class="lg:col-span-2 space-y-8">
          <h2
            class="gradient-heading text-4xl md:text-6xl font-display leading-tight md:leading-tight"
            id="gradient-text"
          >
            Transforming services,<br />enriching lives,<br />together
          </h2>
          <div>
            <a href="/contact" class="btn-footer">
              Get in touch
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
        <!-- Right side with columns -->
        <div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Sitemap Column -->
            <div class="space-y-6">
              <h3 class="footer-heading">Sitemap</h3>
              <ul class="space-y-4 list-none p-0 m-0">
                {
                  sitemapLinks.map((link) => (
                    <li>
                      <a href={link.href} class="footer-link">
                        {link.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
            <!-- Social Links Column -->
            <div class="space-y-6">
              <h3 class="footer-heading">Connect</h3>
              <ul class="space-y-4 list-none p-0 m-0">
                {
                  socialLinks.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center footer-link"
                      >
                        <img
                          src={`/icons/${link.icon}.svg`}
                          alt=""
                          aria-hidden="true"
                          class="w-5 h-5 mr-2"
                          width="20"
                          height="20"
                        />
                        {link.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
            <!-- Legal Column -->
            <div class="space-y-6">
              <h3 class="footer-heading">Legal</h3>
              <ul class="space-y-4 list-none p-0 m-0">
                {
                  infoLinks.map((link) => (
                    <li>
                      <a href={link.href} class="footer-link">
                        {link.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
  <!-- Copyright section -->
  <div class="py-8">
    <Container fullWidth={true}>
      <div class="px-8 md:px-12">
        <div
          class="flex flex-col md:flex-row md:justify-between md:items-center gap-4"
        >
          <p class="footer-copyright">
            &copy; {currentYear} Dale Rogers. All rights reserved.
          </p>
          <p class="footer-copyright flex items-center">
            Made with <span class="footer-heart">❤️</span> in Canberra (Ngunnawal
            Country)
          </p>
        </div>
      </div>
    </Container>
  </div>
</footer>

<style>
  .gradient-heading {
    background: linear-gradient(
      45deg,
      var(--colour-footer-gradient-1, #af8abf) 0%,
      var(--colour-footer-gradient-2, #fa8a58) 35%,
      var(--colour-footer-gradient-3, #36a96a) 70%,
      var(--colour-footer-gradient-1, #af8abf) 100%
    );
    background-size: 200% 100%;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: gradientRotate 8s linear infinite;
    will-change: background-position;
    padding: 0.1em 0;
    margin: -0.1em 0;
    line-height: 1.2;
  }

  @keyframes gradientRotate {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 200% 50%;
    }
  }

  /* Ensure gradient is visible in dark mode */
  :global(.dark) .gradient-heading {
    color: transparent;
    -webkit-text-fill-color: transparent;
  }

  .acknowledgement-slogan {
    color: var(--colour-footer-acknowledgement, #9ca3af);
    font-size: 1.25rem;
  }
</style>
