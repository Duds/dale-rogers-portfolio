---
import Icon from "@/components/ui/Icon.astro";
import Heading from "@/components/ui/Heading.astro";

interface Props {
  value: string | number;
  label: string;
  icon?: string;
  class?: string;
  /** Font family for the heading - 'fraunces' or 'dm-sans' */
  font?: "fraunces" | "dm-sans";
}

const { value, label, icon, class: iconClass, font = "fraunces" } = Astro.props;
---

<div
  class="metric flex items-center gap-4 my-8 p-6 bg-card border border-card rounded-xl"
>
  {
    icon && (
      <span class="shrink-0">
        <Icon
          name={icon}
          class={`w-10 h-10 ${iconClass ? iconClass : "text-accent"}`}
        />
      </span>
    )
  }
  <div>
    <Heading level={3} font={font} size="4xl" class="text-heading">
      {value}
    </Heading>
    <div class="text-2xl text-text-secondary font-semibold">{label}</div>
  </div>
</div>
