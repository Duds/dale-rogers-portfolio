---
import Container from "@/components/layout/Container.astro";

/**
 * Represents a client logo with associated metadata
 * @interface PartnerLogo
 */
interface PartnerLogo {
  /** The name of the client company */
  name: string;
  /** URL to the logo image */
  url: string;
  /** Alt text for accessibility */
  alt: string;
}

interface Props {
  /** Array of client logos to display */
  logos: PartnerLogo[];
}

const { logos } = Astro.props;

// Removed hardcoded clients array
---

<section class="py-20 bg-white">
  <Container>
    <h2
      class="text-2xl font-display text-neutral-600 dark:text-neutral-400 mb-8 text-center"
    >
      Trusted by
    </h2>
    <div class="flex flex-wrap justify-center items-center gap-12 md:gap-16">
      {
        logos.map((logo) => (
          <a
            href={logo.url}
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-60 hover:opacity-100 transition-opacity duration-300"
            aria-label={`Visit ${logo.name}'s website`}
          >
            <img
              src={logo.url}
              alt={`${logo.name} logo`}
              class="h-12 md:h-16 w-auto dark:invert"
              loading="lazy"
              width="auto"
              height="64"
            />
          </a>
        ))
      }
    </div>
  </Container>
</section>
