---
import type { HTMLAttributes } from "astro/types";
import Button from "@/components/ui/Button.astro";

interface Props extends HTMLAttributes<"section"> {
  class?: string;
  /** Array of content paragraphs to display */
  content: string[];
}

const { class: className, content, ...props } = Astro.props;
---

<section
  class:list={["section-full py-32 px-6 md:px-12", className]}
  {...props}
>
  <div class="grid grid-cols-6 gap-8">
    <div class="col-span-6 lg:col-span-4">
      {
        content.map((paragraph) => (
          <p
            class="mb-6 text-2xl text-neutral-600 dark:text-neutral-300"
            set:html={paragraph}
          />
        ))
      }
      <div class="mt-12">
        <Button variant="primary" href="/contact">Let's Talk</Button>
      </div>
    </div>
  </div>
</section>

<style>
  :global(.emphasis) {
    @apply text-primary-600 dark:text-primary-400 font-medium italic;
  }

  :global(.strong) {
    @apply text-neutral-900 dark:text-white font-bold;
  }
</style>
