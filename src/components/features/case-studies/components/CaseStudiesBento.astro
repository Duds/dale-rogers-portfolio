---
import Container from "@/components/layout/Container.astro";
import type { HTMLAttributes } from "astro/types";

/**
 * Interface for case study data
 */
interface CaseStudy {
  /** Title of the case study */
  title: string;
  /** Client name */
  client: string;
  /** URL of the cover image */
  coverImage: string;
  /** Array of tags describing the case study */
  tags: string[];
  /** URL slug for the case study */
  slug: string;
}

/**
 * Props for the CaseStudiesBento component
 */
interface Props extends HTMLAttributes<"section"> {
  /** Array of featured case studies */
  featuredCaseStudies?: CaseStudy[];
}

// TODO: Replace with actual case studies from content collection
const featuredCaseStudies: CaseStudy[] = [
  {
    title: "Developing a Bespoke PMO for Rio Tinto Aluminium",
    client: "Rio Tinto",
    coverImage:
      "https://images.unsplash.com/photo-1611273426858-450d8e3c9fce?q=80&w=1600&auto=format&fit=crop",
    tags: ["Service Design", "Enterprise", "PMO"],
    slug: "/case-studies/rio-tinto-pmo",
  },
  {
    title: "Making Travel Simple",
    client: "University of Canberra",
    coverImage:
      "https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=800&auto=format&fit=crop",
    tags: ["User Research", "Service Design", "Higher Education"],
    slug: "/case-studies/uc-travel",
  },
  {
    title: "A Better Fit and Proper Person Test",
    client: "Commonwealth Government",
    coverImage:
      "https://images.unsplash.com/photo-1551288049-bebda4e38f71?q=80&w=800&auto=format&fit=crop",
    tags: ["Government", "Service Blueprint", "Process Improvement"],
    slug: "/case-studies/fit-proper",
  },
];

const [firstStudy, secondStudy, thirdStudy] = featuredCaseStudies;

const { class: className, ...props } = Astro.props;
---

<section class:list={["case-studies-bento w-full py-20", className]} {...props}>
  <Container fullWidth={true}>
    <div class="max-w-7xl mx-auto px-4 sm:px-12 lg:px-16">
      <div class="text-center mb-16">
        <h2
          class="font-body text-2xl font-semibold text-neutral-600 dark:text-neutral-400 mb-4"
        >
          Case Studies
        </h2>
        <h3
          class="font-display text-4xl md:text-6xl lg:text-7xl font-black text-neutral-900 dark:text-white"
        >
          Transforming Ideas into Digital Reality
        </h3>
      </div>
    </div>
    <div class="grid grid-cols-1 gap-8">
      {
        firstStudy && (
          <a
            href={firstStudy.slug}
            class="group focus:outline-none focus-visible:ring-2 focus-visible:ring-primary rounded-3xl"
            aria-label={`View case study: ${firstStudy.title}`}
          >
            <div class="relative aspect-[16/9] rounded-3xl overflow-hidden mb-4">
              <img
                src={firstStudy.coverImage}
                alt=""
                aria-hidden="true"
                width="1600"
                height="900"
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                loading="eager"
              />
            </div>
            <div class="space-y-2">
              <span class="text-sm font-medium text-neutral-600 dark:text-neutral-400">
                {firstStudy.client}
              </span>
              <h3 class="text-2xl font-bold text-neutral-900 dark:text-white group-hover:text-primary transition-colors">
                {firstStudy.title}
              </h3>
              <div class="flex flex-wrap gap-2">
                {firstStudy.tags.map((tag) => (
                  <span class="text-xs bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 px-2 py-1 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </a>
        )
      }

      <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
        {
          secondStudy && (
            <a
              href={secondStudy.slug}
              class="group md:col-span-7 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary rounded-3xl"
              aria-label={`View case study: ${secondStudy.title}`}
            >
              <div class="relative aspect-[4/3] rounded-3xl overflow-hidden mb-4">
                <img
                  src={secondStudy.coverImage}
                  alt=""
                  aria-hidden="true"
                  width="800"
                  height="600"
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
              <div class="space-y-2">
                <span class="text-sm font-medium text-neutral-600 dark:text-neutral-400">
                  {secondStudy.client}
                </span>
                <h3 class="text-xl font-bold text-neutral-900 dark:text-white group-hover:text-primary transition-colors">
                  {secondStudy.title}
                </h3>
                <div class="flex flex-wrap gap-2">
                  {secondStudy.tags.map((tag) => (
                    <span class="text-xs bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 px-2 py-1 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          )
        }

        {
          thirdStudy && (
            <a
              href={thirdStudy.slug}
              class="group md:col-span-5 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary rounded-3xl"
              aria-label={`View case study: ${thirdStudy.title}`}
            >
              <div class="relative aspect-[4/3] rounded-3xl overflow-hidden mb-4">
                <img
                  src={thirdStudy.coverImage}
                  alt=""
                  aria-hidden="true"
                  width="800"
                  height="600"
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
              <div class="space-y-2">
                <span class="text-sm font-medium text-neutral-600 dark:text-neutral-400">
                  {thirdStudy.client}
                </span>
                <h3 class="text-xl font-bold text-neutral-900 dark:text-white group-hover:text-primary transition-colors">
                  {thirdStudy.title}
                </h3>
                <div class="flex flex-wrap gap-2">
                  {thirdStudy.tags.map((tag) => (
                    <span class="text-xs bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 px-2 py-1 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          )
        }
      </div>
    </div>
  </Container>
</section>
