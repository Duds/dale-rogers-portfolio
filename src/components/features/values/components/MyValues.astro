---
import Container from "@/components/layout/Container.astro";

interface Value {
  name: string;
  description: string;
}

// Temporary values section with marketing copy
const content = {
  title: "Core Principles That Guide My Work",
  image:
    "https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=1600&auto=format&fit=crop",
  values: [
    {
      name: "Human-Centered",
      description:
        "Services should solve real problems for real people. I prioritize user needs over organizational convenience.",
    },
    {
      name: "Evidence-Based",
      description:
        "Decisions grounded in research and data, not assumptions. I validate every design choice with user testing.",
    },
    {
      name: "Practical Innovation",
      description:
        "Solutions must be both visionary and implementable. I balance creativity with technical feasibility.",
    },
    {
      name: "Collaborative Approach",
      description:
        "Great design happens together. I work transparently with stakeholders at every level.",
    },
  ] satisfies Value[],
};
---

<section class="my-values w-full py-20">
  <Container>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center mb-16">
      <h2 class="text-2xl font-semibold text-gray-600 dark:text-gray-400 mb-4">
        My Values
      </h2>
      <h3
        class="text-4xl md:text-6xl lg:text-7xl font-black text-gray-900 dark:text-white"
      >
        {content.title}
      </h3>
    </div>

    <div class="w-full mb-8">
      <div
        class="relative aspect-[16/9] rounded-3xl overflow-hidden shadow-soft"
      >
        <img
          src={content.image}
          alt="Values in action"
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <div class="w-2/3">
      <div class="text-left">
        <a
          href="/values"
          class="btn-primary inline-flex items-center gap-2 rounded-pill text-xl px-8 py-4 shadow-soft-hover"
        >
          Explore My Values
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </Container>
</section>

