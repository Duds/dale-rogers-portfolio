---
import Container from "@/components/layout/Container.astro";
import Button from "@/components/ui/Button.astro";

interface Value {
  /** Name of the value */
  name: string;
  /** Description of the value */
  description: string;
  /** Optional icon identifier */
  icon?: string;
}

interface Props {
  /** Array of values to display */
  values: Value[];
}

// Content for the values section
const content = {
  title: "Core Principles That Guide My Work",
  image:
    "https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=1600&auto=format&fit=crop",
  values: [
    {
      name: "Human-Centred",
      description:
        "Services should solve real problems for real people. I prioritise user needs over organisational convenience.",
      icon: "user-focus",
    },
    {
      name: "Evidence-Based",
      description:
        "Decisions grounded in research and data, not assumptions. I validate every design choice with user testing.",
      icon: "data",
    },
    {
      name: "Practical Innovation",
      description:
        "Solutions must be both visionary and implementable. I balance creativity with technical feasibility.",
      icon: "lightbulb",
    },
    {
      name: "Collaborative Approach",
      description:
        "Great design happens together. I work transparently with stakeholders at every level.",
      icon: "team",
    },
  ] satisfies Value[],
};
---

<section class="w-full py-20 bg-neutral-100 dark:bg-neutral-900">
  <Container>
    <div class="max-w-7xl mx-auto text-center mb-16">
      <p
        class="text-sm font-medium text-neutral-600 dark:text-neutral-400 mb-3"
      >
        My Values
      </p>
      <h2
        class="text-4xl md:text-5xl font-display text-neutral-900 dark:text-neutral-50 mb-8"
      >
        {content.title}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      {
        content.values.map((value) => (
          <div class="p-8 bg-white dark:bg-neutral-800 rounded-2xl">
            {value.icon && (
              <div class="w-12 h-12 mb-6">
                <img
                  src={`/icons/${value.icon}.svg`}
                  alt=""
                  aria-hidden="true"
                  class="w-full h-full text-primary-600 dark:text-primary-400"
                  width="48"
                  height="48"
                />
              </div>
            )}
            <h3 class="text-xl font-display text-neutral-900 dark:text-neutral-50 mb-4">
              {value.name}
            </h3>
            <p class="text-neutral-600 dark:text-neutral-400">
              {value.description}
            </p>
          </div>
        ))
      }
    </div>

    <div class="flex justify-center">
      <Button variant="secondary" href="/values" class="group">
        Explore My Values
        <span
          class="ml-2 transition-transform duration-200 group-hover:translate-x-1"
          aria-hidden="true"
        >
          â†’
        </span>
      </Button>
    </div>
  </Container>
</section>

