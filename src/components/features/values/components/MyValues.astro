---
import Container from "@/components/layout/Container.astro";
import Button from "@/components/ui/Button.astro";

interface Props {
  /** Title for the values card (h2) */
  title?: string;
  /** Subtitle for the values card (h3) */
  subtitle?: string;
  /** Image URL for the photocard */
  imageUrl?: string;
  /** Button text */
  buttonText?: string;
  /** Button link destination */
  buttonLink?: string;
}

// Default values
const {
  title = "My Values",
  subtitle = "Designing with empathy, accessibility and inclusivity at the forefront of everything I do.",
  imageUrl = "https://images.unsplash.com/photo-1551434678-e076c223a692?q=80&w=2940&auto=format&fit=crop",
  buttonText = "Explore My Values",
  buttonLink = "/values",
} = Astro.props;
---

<section class="w-full py-24">
  <Container fullWidth={true}>
    <!-- Headings above the card -->
    <div class="mb-8 text-left">
      <h2
        class="font-body text-2xl font-semibold text-neutral-600 dark:text-neutral-400 mb-4"
      >
        {title}
      </h2>
      <h3 class="text-4xl text-neutral-900 dark:text-white leading-tight">
        {subtitle}
      </h3>
    </div>

    <!-- Photo card - full width, no text -->
    <div class="w-full overflow-hidden rounded-2xl shadow-lg mb-8">
      <img
        src={imageUrl}
        alt=""
        class="w-full h-auto object-cover"
        aria-hidden="true"
        width="1920"
        height="1080"
      />
    </div>

    <!-- Button beneath the card -->
    <div class="text-left mt-6">
      <Button variant="primary" href={buttonLink}>
        {buttonText}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </Button>
    </div>
  </Container>
</section>

<style>
  /* Component-specific styles can go here */
</style>
