---
import Container from "@/components/layout/Container.astro";

// TODO: Move this content to a CMS or content collection

interface Props {
  bio: string;
}

const { bio } = Astro.props;
---

<section class="who-is-dale py-20 bg-white dark:bg-gray-950">
  <Container>
    <div class="w-3/5">
      <p
        class="text-2xl md:text-3xl text-gray-700 dark:text-gray-300 leading-relaxed"
        set:html={bio}
      />
    </div>
  </Container>
</section>

<style>
  /* Ensure consistent spacing and alignment */
  .who-is-dale {
    width: 100%;
    overflow: hidden;
  }

  /* Emphasis styles */
  :global(.who-is-dale .emphasis) {
    @apply text-primary-600 dark:text-primary-400 font-medium;
    font-style: italic;
  }

  :global(.who-is-dale .strong) {
    @apply text-gray-900 dark:text-white font-bold;
  }

  /* Ensure proper text flow */
  :global(.who-is-dale p) {
    @apply space-y-6;
  }
</style>
