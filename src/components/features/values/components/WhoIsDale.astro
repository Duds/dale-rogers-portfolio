---
import Container from "@/components/layout/Container.astro";

// TODO: Move this content to a CMS or content collection

interface Props {
  image: string;
  bio: string;
  skills: string[];
}

const { image, bio, skills } = Astro.props;
---

<section class="who-is-dale py-20 bg-white dark:bg-gray-950">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Left side: Image -->
      <div>
        <img
          src={image}
          alt="Dale Rogers"
          class="rounded-lg shadow-lg w-full h-auto object-cover aspect-square"
          loading="lazy"
        />
      </div>

      <!-- Right side: Content -->
      <div>
        <h2
          class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white"
        >
          Who is Dale?
        </h2>
        <p
          class="text-lg md:text-xl mb-8 text-gray-700 dark:text-gray-300 leading-relaxed"
          set:html={bio}
        />

        <h3
          class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200"
        >
          Core Skills
        </h3>
        <ul class="flex flex-wrap gap-2">
          {
            skills.map((skill) => (
              <li class="bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200 text-sm font-medium px-3 py-1 rounded-full">
                {skill}
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Container>
</section>
