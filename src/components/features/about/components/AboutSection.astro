---
/**
 * AboutSection Component
 *
 * A section component that displays the professional profile and biography.
 * Supports rich text formatting with emphasis and strong styles.
 *
 * @component AboutSection
 */

import Container from "../../../../components/layout/Container.astro";
import Button from "../../../../components/ui/Button.astro";

interface Props {
  /** Biography text with HTML markup for emphasis and strong styling */
  bio: string;
}

const { bio } = Astro.props;
---

<section
  class="flex items-center bg-white dark:bg-neutral-950 w-full overflow-hidden"
  aria-labelledby="about-heading"
>
  <Container fullWidth={true}>
    <div class="grid grid-cols-6 gap-8 lg:gap-12 w-full">
      <div class="col-span-6 lg:col-span-4">
        <h2 id="about-heading" class="sr-only">About</h2>
        <div
          class="text-2xl text-neutral-600 dark:text-neutral-300 leading-relaxed [&>.emphasis]:text-primary-600 [&>.emphasis]:dark:text-primary-400 [&>.emphasis]:font-medium [&>.emphasis]:italic [&>.strong]:text-neutral-900 [&>.strong]:dark:text-white [&>.strong]:font-bold space-y-6 mb-8"
          set:html={bio}
        />
        <div>
          <Button variant="primary" href="/about">
            Get to know me
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  /* Emphasis styles */
  :global(.about-section .emphasis) {
    @apply text-primary-600 dark:text-primary-400 font-medium;
    font-style: italic;
  }

  /* Strong text styles */
  :global(.about-section .strong) {
    @apply text-neutral-900 dark:text-white font-bold;
  }

  /* Paragraph spacing */
  :global(.about-section p) {
    @apply space-y-6;
  }
</style>
