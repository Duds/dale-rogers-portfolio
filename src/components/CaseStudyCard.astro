---
interface Props {
  title: string;
  summary: string;
  tags: string[];
  slug: string;
}

const { title, summary, tags, slug } = Astro.props;
---

<article
  class="bg-[var(--colour-bg)] rounded-[var(--radius-lg)] shadow-soft overflow-hidden transition-transform hover:scale-[1.02]"
>
  <div class="p-6">
    <h3 class="text-heading text-xl text-[var(--colour-text)] mb-2">
      <a
        href={`/case-studies/${slug}`}
        class="hover:text-[var(--colour-accent)] transition-colors"
      >
        {title}
      </a>
    </h3>
    <p class="text-body text-[var(--colour-text)] mb-4">{summary}</p>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="px-3 py-1 bg-[var(--colour-section-alt)] text-[var(--colour-text)] text-sm rounded-[var(--radius-pill)]">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</article>
